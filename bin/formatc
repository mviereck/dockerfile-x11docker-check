#! /bin/bash
xdotool key alt+F2
sleep 1
xdotool type x-terminal-emulator
sleep 1
xdotool key Return
sleep 2
xdotool type "echo Hello Host!"
sleep 1
xdotool key Return
sleep 1
xdotool type "echo format C:"
sleep 1
xdotool key Return
sleep 1
xdotool type 'pkexec sh -c "echo running format C: as root!"'
sleep 1
xdotool key Return
sleep 1
